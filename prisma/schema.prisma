generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String   @id @default(uuid())
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    imageUrl     String?
    firstName    String?
    lastName     String?
    emailAddress String   @unique
    chats        Chat[] // Relation to chat sessions
}

model Chat {
    id        String    @id @default(uuid())
    user      User      @relation(fields: [userId], references: [id])
    userId    String
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    // Each chat session has many messages
    messages  Message[]

    // You can add additional fields to describe the session, e.g., title, status, etc.
    title String?
}

model Message {
    id        String   @id @default(uuid())
    chat      Chat     @relation(fields: [chatId], references: [id])
    chatId    String
    // Indicates whether this message is from the user or the system (for example, legal document generator response)
    isUser    Boolean
    content   String // The actual text content of the message
    createdAt DateTime @default(now())
}
